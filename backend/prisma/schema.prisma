generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  SURVIVOR
  NIKITA
}

enum RoundStatus {
  COOLDOWN
  ACTIVE
  FINISHED
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  role      UserRole
  createdAt DateTime @default(now())
  
  playerStats PlayerStats[]
}

model Round {
  id          String      @id @default(uuid())
  startTime   DateTime
  endTime     DateTime
  cooldownEnd DateTime
  status      RoundStatus @default(COOLDOWN)
  totalScore  Int         @default(0)
  createdAt   DateTime    @default(now())
  
  playerStats PlayerStats[]
  
  @@index([status])
  @@index([startTime])
}

model PlayerStats {
  id       String @id @default(uuid())
  userId   String
  roundId  String
  taps     Int    @default(0)
  score    Int    @default(0)
  
  user     User   @relation(fields: [userId], references: [id])
  round    Round  @relation(fields: [roundId], references: [id])
  
  @@unique([userId, roundId])
  @@index([roundId])
  @@index([roundId, score])
}

