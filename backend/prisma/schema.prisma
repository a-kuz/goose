generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  SURVIVOR
  NIKITA
}

enum RoundStatus {
  COOLDOWN
  ACTIVE
  FINISHED
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  role      UserRole
  createdAt DateTime @default(now())
  
  taps        Tap[]
  playerStats PlayerStats[]
}

model Round {
  id          String      @id @default(uuid())
  startTime   DateTime
  endTime     DateTime
  cooldownEnd DateTime
  status      RoundStatus @default(COOLDOWN)
  totalScore  Int         @default(0)
  createdAt   DateTime    @default(now())
  
  taps        Tap[]
  playerStats PlayerStats[]
  
  @@index([status])
  @@index([startTime])
}

model Tap {
  id        String   @id @default(uuid())
  userId    String
  roundId   String
  points    Int
  createdAt DateTime @default(now())
  
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  round Round @relation(fields: [roundId], references: [id], onDelete: Cascade)
  
  @@index([roundId, userId])
  @@index([roundId, createdAt])
}

model PlayerStats {
  id       String @id @default(uuid())
  userId   String
  roundId  String
  taps     Int    @default(0)
  score    Int    @default(0)
  
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  round Round @relation(fields: [roundId], references: [id], onDelete: Cascade)
  
  @@unique([userId, roundId])
  @@index([roundId])
  @@index([roundId, score])
}
